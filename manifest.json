{
  "manifest_version": 2,
  "name": "Auto Reload",
  "version": "1.0",
  "description": "A simple extension to reload the current web page when connection resumes.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab", "<all_urls>"],
  "browser_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_title": "Reload the page"
  },
  "background": {
    "scripts": ["utils.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content-script.js"]
    }
  ]
}
